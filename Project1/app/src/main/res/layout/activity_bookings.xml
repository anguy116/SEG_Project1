<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Bookings:"
            android:textSize="25sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no bookings"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumbing Inc. - Monday 4pm"
            android:visibility="invisible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumbing Inc. - Monday 4pm"
            android:visibility="invisible"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumbing Inc. - Monday 4pm"
            android:visibility="invisible"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumbing Inc. - Monday 4pm"
            android:visibility="invisible"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/booking6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plumbing Inc. - Monday 4pm"
            android:visibility="invisible"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>